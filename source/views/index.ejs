<% include header %>
  <article class="article row" v-for="article in articles" data-pid="{{article.pid}}">
    <a href={{article.articleLink}} target="_blank" class="hidden-xs">
      <img v-bind:src="article.cover" class="cover grid-2 hidden-xs">
    </a>
    <div class="grid-4">
      <header>
        <a href={{article.articleLink}} target="_blank">{{article.title}}</a>
      </header>
      <div class="summary">{{article.summary}}</div>
        <p class="row">
          <span>
            <a href={{article.userLink}} target="_blank">
              <i class="icon-user"></i>
              {{article.name}}
            </a>
          </span>
          <span>
            <i class="icon-time"></i>{{article.date}}
          </span>
          <span><i class="icon-eye-open"></i>{{article.views}}</span>
          <span><i class="icon-comment"></i>{{article.comment}}</span>
          <button class="button-success"><a href="{{article.articleLink}}">阅读全文</a></button>
        </p>
      </div>
  </article>
  <button type="button" v-on:click="load" class="button-success block"><i class="icon-spinner" v-bind:class="{'icon-spin':loading}"></i>点击加载更多</button>
  <p class="text-center" v-show="loading">没有更多了</p>
  </div>
  </div>
  </div>
  <% include footer %>